// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}
model Users {
  id    Int     @id @default(autoincrement())
  email String  @unique
  password String
  first_name  String?
  last_name  String?
}

model Roles {
   id    Int     @id @default(autoincrement())
   name String
}
